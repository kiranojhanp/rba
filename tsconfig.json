{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["./src"]

    // "ts-node": {
    // 	"swc": true
    // }
}
